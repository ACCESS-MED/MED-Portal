<div class="container">
  <div class="hero">
    <div class="hero-content col-lg-7">
      <h1>The <%= Rails.application.settings['name'] %> is <%= setting(:tagline).html_safe %></h1>
      <p class="lead">A Catalog of Numerical Models for Research in Earth Sciences.</p>
      <div class="hero-ctas">
        <%= link_to "Submit a model to #{Rails.application.settings['abbreviation']}".html_safe, new_model_path, class: "btn" %>
        <%= link_to "ðŸŽ‰ Volunteer to review".html_safe, "/reviewer-signup.html", class: "btn" %>
      </div>
    </div>

    <div class="hero-nav col-lg-4 offset-lg-1 align-self-end">
      <%= link_to models_path do %>
      <%= image_tag 'icon_models.svg' %>
      Explore Models
      <% end %>
      <%= link_to "https://joss.readthedocs.io/en/latest/" do %>
      <%= image_tag 'icon_docs.svg' %>
      Documentation
      <% end %>
      <%= link_to about_path do %>
      <%= image_tag 'icon_info.svg' %>
      Learn More
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h4>Recently Added Models <span class="badge-count"><%= Model.visible.count %></span></h4>

  <div class="model-list" id="all-models">
    <%= render partial: "models/list", locals: { models: @models } %>
  </div>

  <div class="my-5 text-center">
    <%= link_to "View all models".html_safe, published_models_path, class: "btn", data: { text: "View all models"} %>
  </div>
</div>
